.message
  .message__user
    .message__user__name
      = message.user.name
    .message__user__date
      = message.created_at.to_s
  .message__main
    - if message.content.present?
      %p.message__main__content
        = message.content
    = image_tag message.image.url, class:'message__main__image' if message.image.present?