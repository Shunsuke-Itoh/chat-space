.main__chat
  .header
    .group
      .group__name
        = @group.name
      .group-member
        - @group.users.each do |user|
          = user.name
    .edit
      = link_to edit_group_path(@group.id), class: "edit__btn" do
        Edit

  .messages
    = render @messages
    .chat-input-form
      = form_for [@group, @message] do |f|
        .input-box
          .input-box__message
            = f.text_field :content, placeholder: "type a message", class: "input-box__textfield"
          .input-box__image
            = f.label :image, class: "input-box__image-btn" do
              = icon('fas', 'image')
              = f.file_field :image, class: "input-box__image__none"
          .input-btn
            = f.submit 'SEND', class: "input-btn__send"
